@model Book


<div>
    <form asp-action="Update">
        <div class="form-control">
            <div>
                <label>Id</label>
                <input type="number" name="Id" value="@Model.Id" readonly/>
            </div>
            <div>
                <label>Name</label>
                <input type="text" name="Name" value="@Model.Name"/>
            </div>
            <div>
                <label>IsAvailable</label>
                <input type="text" name="IsAvailable" value="@Model.IsAvailable"  />
            </div>
            <div>
                <label>Genre</label>
                <input type="text" name="Genre" value="@Model.Genre" />
            </div>
            <div>
                <input class="btn btn-primary" type="submit" value="Submit"/>
            </div>
        </div>
    </form>
</div>