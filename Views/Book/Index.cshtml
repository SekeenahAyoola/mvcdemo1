@model IEnumerable<Book>
@{
    ViewData["Title"] = "Index";
}
<h2>Welcome to our Library</h2>
<p><strong>All Our books</strong></p>
<div>
    <table class="table table-active table-bordered table-responsive table-striped">
        <thead>
            <tr>
                <td>Id</td> <td>Name</td> <td>Available</td><td>Genre</td> <td>View</td> <td>Update</td> <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Id</td>
                    <td>@book.Name</td>
                    <td>@book.IsAvailable</td>
                    <td>@book.Genre</td>
                    <td>
                        <a asp-controller="Book" asp-action="Book" asp-route-id="@book.Id">View</a>
                    </td>
                    <td>
                        <a asp-controller="Book" asp-action="Update" asp-route-id="@book.Id">Update</a>
                    </td>
                    <td>
                        <a asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>


    </table>
    <p><a asp-controller="Book" asp-action="Add" >Add a Book</a></p>
</div>
